@model SurveyResult
@{
    ViewData["Title"] = "Index";
}
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<body class="body">
    <h4 id="survey-header">Please take the time to fill out this brief survey!</h4>

    <div class="maindiv">
        <form asp-controller="survey" asp-action="index" method="post">
            <table class="table" id="park-survey-table">
                <tbody>
                    <tr>
                        <td id="survey-row-names"><label asp-for="ParkCode">Park Name</label></td>
                        <td><select asp-for="ParkCode" asp-items="SurveyResult.parks" class="form-control"></select></td>

                    </tr>
                    <tr>
                        <td id="survey-row-names"><label asp-for="EmailAddress">Email Address</label></td>
                        <td>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress"></span>
                        </td>
                    </tr>
                    <tr>
                        <td id="survey-row-names"><label asp-for="State">State of Residence</label></td>
                        <td>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State"></span>
                        </td>
                    </tr>
                    <tr>
                        <td id="survey-row-names"><label asp-for="ActivityLevel">What is Your Level of Activity</label></td>
                        <td>
                            <select asp-for="ActivityLevel" asp-items="SurveyResult.activityLevel" class="form-control"></select>
                            <span asp-validation-for="ActivityLevel"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div align="center">
                <input class="btn btn-success" type="submit" value="Submit Survey" style="color: black;" />
            </div>
        </form>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top: 50px;">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
                <li data-target="#myCarousel" data-slide-to="7"></li>
                <li data-target="#myCarousel" data-slide-to="8"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active" id="camper">
                    <img src="~/images/carousel/camper1.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper2.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper3.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper4.jpg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper5.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper6.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper7.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper8.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item" id="camper">
                    <img src="~/images/carousel/camper9.jpeg" alt="camper">
                    <div class="carousel-caption">
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</body>
